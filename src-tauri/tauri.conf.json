{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DeskFlow",
  "version": "0.1.0",
  "identifier": "com.deskflow.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "DeskFlow",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "maxWidth": 1920,
        "maxHeight": 1080,
        "resizable": true,
        "minimizable": true,
        "closable": true,
        "fullscreen": true,
        "maximized": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https://*.supabase.co; connect-src 'self' https://*.supabase.co; style-src 'self' 'unsafe-inline'; img-src 'self' https: data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "DeveloperTool",
    "copyright": "Copyright Â© 2024 DeskFlow",
    "publisher": "DeskFlow Team",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}